---
import BaseLayout from "~/layouts/BaseLayout.astro";
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon/components";
import SpriteIcon from "~/components/sprite-icon.astro";
---

<BaseLayout
    title="Nosotros - TheRealDevs"
    description="Conoce a TheRealDevs, tu socio en desarrollo de software e innovación tecnológica."
>
    <div class="animate-fadeIn space-y-24 px-8 py-32">
        <ContentSection title="Sobre Nosotros" id="nosotros">
            <SpriteIcon
                slot="eyebrow"
                name="logomark"
                class="size-72 animate-scaleIn"
                id="logo-contacto"
            />
            <Fragment slot="lead">
                Somos un equipo de <span class="text-primary"
                    >desarrolladores apasionados</span
                >
                comprometidos con la <span class="text-primary">excelencia</span
                > y la innovación.
            </Fragment>

            <!-- Mission & Vision -->
            <div class="grid gap-8 md:grid-cols-2">
                <div
                    class="border-primary/30 group animate-slideUp rounded-lg border-2 bg-offset p-8 transition-all duration-500 hover:scale-105 hover:shadow-xl"
                    style="animation-delay: 0ms;"
                >
                    <div class="mb-4 flex items-center gap-4">
                        <Icon
                            name="mdi:target"
                            class="size-12 text-primary transition-transform duration-300 group-hover:rotate-12"
                        />
                        <h3 class="font-bold text-2xl">Nuestra Misión</h3>
                    </div>
                    <p class="text-offset text-lg">
                        Transformar ideas en soluciones tecnológicas innovadoras
                        que impulsen el crecimiento de nuestros clientes,
                        utilizando las mejores prácticas de desarrollo y
                        tecnologías de vanguardia.
                    </p>
                </div>

                <div
                    class="border-primary/30 group animate-slideUp rounded-lg border-2 bg-offset p-8 transition-all duration-500 hover:scale-105 hover:shadow-xl"
                    style="animation-delay: 100ms;"
                >
                    <div class="mb-4 flex items-center gap-4">
                        <Icon
                            name="mdi:eye"
                            class="size-12 text-primary transition-transform duration-300 group-hover:rotate-12"
                        />
                        <h3 class="font-bold text-2xl">Nuestra Visión</h3>
                    </div>
                    <p class="text-offset text-lg">
                        Ser la agencia de desarrollo de software líder en la
                        región, reconocida por nuestra calidad, innovación y
                        compromiso con el éxito de nuestros clientes.
                    </p>
                </div>
            </div>

            <!-- Values -->
            <div class="mt-16">
                <h3 class="mb-8 animate-fadeIn text-center font-bold text-3xl">
                    Nuestros Valores
                </h3>
                <div class="grid gap-6 md:grid-cols-3">
                    <div
                        class="group flex animate-slideUp flex-col items-center gap-4 rounded-lg border border-default bg-offset p-6 text-center transition-all duration-300 hover:scale-105 hover:border-primary hover:shadow-xl"
                        style="animation-delay: 0ms;"
                    >
                        <div
                            class="group-hover:bg-primary/10 rounded-full border-2 border-primary p-4 transition-all duration-300 group-hover:scale-110"
                        >
                            <Icon
                                name="mdi:lightbulb"
                                class="size-10 text-primary transition-transform duration-300 group-hover:rotate-12"
                            />
                        </div>
                        <h4
                            class="font-bold transition-colors duration-300 text-xl group-hover:text-primary"
                        >
                            Innovación
                        </h4>
                        <p class="text-offset">
                            Buscamos constantemente nuevas formas de resolver
                            problemas y mejorar procesos.
                        </p>
                    </div>

                    <div
                        class="group flex animate-slideUp flex-col items-center gap-4 rounded-lg border border-default bg-offset p-6 text-center transition-all duration-300 hover:scale-105 hover:border-primary hover:shadow-xl"
                        style="animation-delay: 100ms;"
                    >
                        <div
                            class="group-hover:bg-primary/10 rounded-full border-2 border-primary p-4 transition-all duration-300 group-hover:scale-110"
                        >
                            <Icon
                                name="mdi:shield-check"
                                class="size-10 text-primary transition-transform duration-300 group-hover:rotate-12"
                            />
                        </div>
                        <h4
                            class="font-bold transition-colors duration-300 text-xl group-hover:text-primary"
                        >
                            Calidad
                        </h4>
                        <p class="text-offset">
                            Nos comprometemos a entregar productos de la más
                            alta calidad en cada proyecto.
                        </p>
                    </div>

                    <div
                        class="group flex animate-slideUp flex-col items-center gap-4 rounded-lg border border-default bg-offset p-6 text-center transition-all duration-300 hover:scale-105 hover:border-primary hover:shadow-xl"
                        style="animation-delay: 200ms;"
                    >
                        <div
                            class="group-hover:bg-primary/10 rounded-full border-2 border-primary p-4 transition-all duration-300 group-hover:scale-110"
                        >
                            <Icon
                                name="mdi:handshake"
                                class="size-10 text-primary transition-transform duration-300 group-hover:rotate-12"
                            />
                        </div>
                        <h4
                            class="font-bold transition-colors duration-300 text-xl group-hover:text-primary"
                        >
                            Compromiso
                        </h4>
                        <p class="text-offset">
                            El éxito de nuestros clientes es nuestro éxito.
                            Trabajamos como verdaderos socios.
                        </p>
                    </div>

                    <div
                        class="group flex animate-slideUp flex-col items-center gap-4 rounded-lg border border-default bg-offset p-6 text-center transition-all duration-300 hover:scale-105 hover:border-primary hover:shadow-xl"
                        style="animation-delay: 300ms;"
                    >
                        <div
                            class="group-hover:bg-primary/10 rounded-full border-2 border-primary p-4 transition-all duration-300 group-hover:scale-110"
                        >
                            <Icon
                                name="mdi:account-group"
                                class="size-10 text-primary transition-transform duration-300 group-hover:rotate-12"
                            />
                        </div>
                        <h4
                            class="font-bold transition-colors duration-300 text-xl group-hover:text-primary"
                        >
                            Colaboración
                        </h4>
                        <p class="text-offset">
                            Creemos en el poder del trabajo en equipo y la
                            comunicación abierta.
                        </p>
                    </div>

                    <div
                        class="group flex animate-slideUp flex-col items-center gap-4 rounded-lg border border-default bg-offset p-6 text-center transition-all duration-300 hover:scale-105 hover:border-primary hover:shadow-xl"
                        style="animation-delay: 400ms;"
                    >
                        <div
                            class="group-hover:bg-primary/10 rounded-full border-2 border-primary p-4 transition-all duration-300 group-hover:scale-110"
                        >
                            <Icon
                                name="mdi:school"
                                class="size-10 text-primary transition-transform duration-300 group-hover:rotate-12"
                            />
                        </div>
                        <h4
                            class="font-bold transition-colors duration-300 text-xl group-hover:text-primary"
                        >
                            Aprendizaje
                        </h4>
                        <p class="text-offset">
                            Nos mantenemos actualizados con las últimas
                            tecnologías y tendencias.
                        </p>
                    </div>

                    <div
                        class="group flex animate-slideUp flex-col items-center gap-4 rounded-lg border border-default bg-offset p-6 text-center transition-all duration-300 hover:scale-105 hover:border-primary hover:shadow-xl"
                        style="animation-delay: 500ms;"
                    >
                        <div
                            class="group-hover:bg-primary/10 rounded-full border-2 border-primary p-4 transition-all duration-300 group-hover:scale-110"
                        >
                            <Icon
                                name="mdi:heart"
                                class="size-10 text-primary transition-transform duration-300 group-hover:rotate-12"
                            />
                        </div>
                        <h4
                            class="font-bold transition-colors duration-300 text-xl group-hover:text-primary"
                        >
                            Pasión
                        </h4>
                        <p class="text-offset">
                            Amamos lo que hacemos y eso se refleja en cada línea
                            de código.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Nuestro Equipo -->
            <div class="mt-24">
                <h3 class="mb-12 animate-fadeIn text-center font-bold text-3xl">
                    Nuestro Equipo
                </h3>
                <div class="grid gap-8 md:grid-cols-2">
                    <!-- Daniel Profile -->
                    <div
                        class="group flex animate-slideUp flex-col rounded-xl border border-default bg-offset p-8 shadow-lg transition-all duration-500 hover:scale-[1.02] hover:border-primary hover:shadow-2xl"
                        style="animation-delay: 0ms;"
                    >
                        <div class="mb-6 flex items-center gap-4">
                            <div
                                class="bg-primary/20 group-hover:bg-primary/30 flex size-16 items-center justify-center rounded-full font-bold text-primary transition-all duration-300 text-3xl group-hover:scale-110"
                            >
                                DF
                            </div>
                            <div>
                                <h4
                                    class="font-bold transition-colors duration-300 text-2xl group-hover:text-primary"
                                >
                                    Daniel Enrique Flores García
                                </h4>
                                <span class="font-semibold text-primary"
                                    >Ingeniero en Sistemas & Senior Salesforce
                                    Specialist</span
                                >
                            </div>
                        </div>

                        <p class="mb-6 text-offset">
                            Ingeniero con más de 10 años de experiencia,
                            combinando una sólida base técnica con visión
                            funcional de negocio. Especialista en Salesforce
                            (Apex, LWC), .NET y administración de
                            infraestructura empresarial.
                        </p>

                        <div class="mt-auto space-y-4">
                            <div>
                                <h5
                                    class="mb-2 font-semibold uppercase tracking-wider text-default text-sm"
                                >
                                    Fortalezas Clave
                                </h5>
                                <ul class="space-y-2 text-offset text-sm">
                                    <li class="flex items-start gap-2">
                                        <Icon
                                            name="mdi:check-circle"
                                            class="mt-1 size-4 flex-shrink-0 text-primary"
                                        />
                                        <span
                                            >Arquitectura y Automatización de
                                            procesos.</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <Icon
                                            name="mdi:check-circle"
                                            class="mt-1 size-4 flex-shrink-0 text-primary"
                                        />
                                        <span
                                            >Integración avanzada Salesforce
                                            (Comercial, Contable).</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <Icon
                                            name="mdi:check-circle"
                                            class="mt-1 size-4 flex-shrink-0 text-primary"
                                        />
                                        <span
                                            >Infraestructura Linux y Seguridad.</span
                                        >
                                    </li>
                                </ul>
                            </div>

                            <div class="pt-4">
                                <h5
                                    class="mb-2 font-semibold uppercase tracking-wider text-default text-sm"
                                >
                                    Tecnologías
                                </h5>
                                <div class="flex flex-wrap gap-2">
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >Salesforce/Apex</span
                                    >
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >.NET (C#)</span
                                    >
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >SQL Server</span
                                    >
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >Linux</span
                                    >
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Jorge Profile -->
                    <div
                        class="group flex animate-slideUp flex-col rounded-xl border border-default bg-offset p-8 shadow-lg transition-all duration-500 hover:scale-[1.02] hover:border-primary hover:shadow-2xl"
                        style="animation-delay: 100ms;"
                    >
                        <div class="mb-6 flex items-center gap-4">
                            <div
                                class="bg-primary/20 group-hover:bg-primary/30 flex size-16 items-center justify-center rounded-full font-bold text-primary transition-all duration-300 text-3xl group-hover:scale-110"
                            >
                                JR
                            </div>
                            <div>
                                <h4
                                    class="font-bold transition-colors duration-300 text-2xl group-hover:text-primary"
                                >
                                    Jorge Isaac Rodríguez Vargas
                                </h4>
                                <span class="font-semibold text-primary"
                                    >Full Stack & Mobile Developer</span
                                >
                            </div>
                        </div>

                        <p class="mb-6 text-offset">
                            Ingeniero especializado en desarrollo full stack y
                            multiplataforma con experiencia internacional.
                            Experto en conectar soluciones backend robustas con
                            interfaces modernas y optimizadas.
                        </p>

                        <div class="mt-auto space-y-4">
                            <div>
                                <h5
                                    class="mb-2 font-semibold uppercase tracking-wider text-default text-sm"
                                >
                                    Fortalezas Clave
                                </h5>
                                <ul class="space-y-2 text-offset text-sm">
                                    <li class="flex items-start gap-2">
                                        <Icon
                                            name="mdi:check-circle"
                                            class="mt-1 size-4 flex-shrink-0 text-primary"
                                        />
                                        <span
                                            >Desarrollo Multiplataforma
                                            (Flutter, Web).</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <Icon
                                            name="mdi:check-circle"
                                            class="mt-1 size-4 flex-shrink-0 text-primary"
                                        />
                                        <span
                                            >Salesforce Development (LWC, Apex).</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <Icon
                                            name="mdi:check-circle"
                                            class="mt-1 size-4 flex-shrink-0 text-primary"
                                        />
                                        <span
                                            >Diseño de Arquitecturas Escalables.</span
                                        >
                                    </li>
                                </ul>
                            </div>

                            <div class="pt-4">
                                <h5
                                    class="mb-2 font-semibold uppercase tracking-wider text-default text-sm"
                                >
                                    Tecnologías
                                </h5>
                                <div class="flex flex-wrap gap-2">
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >Flutter</span
                                    >
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >Angular/Vue</span
                                    >
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >Laravel/PHP</span
                                    >
                                    <span
                                        class="rounded-full bg-default px-3 py-1 text-xs"
                                        >Node.js</span
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats -->
            <div class="mt-16 grid gap-8 md:grid-cols-4">
                <div
                    class="animate-slideUp text-center"
                    style="animation-delay: 0ms;"
                >
                    <div
                        class="mb-2 font-bold text-primary transition-transform duration-300 text-5xl hover:scale-110"
                    >
                        10+
                    </div>
                    <div class="text-offset">Años de Experiencia</div>
                </div>
                <div
                    class="animate-slideUp text-center"
                    style="animation-delay: 100ms;"
                >
                    <div
                        class="mb-2 font-bold text-primary transition-transform duration-300 text-5xl hover:scale-110"
                    >
                        100+
                    </div>
                    <div class="text-offset">Proyectos Completados</div>
                </div>
                <div
                    class="animate-slideUp text-center"
                    style="animation-delay: 200ms;"
                >
                    <div
                        class="mb-2 font-bold text-primary transition-transform duration-300 text-5xl hover:scale-110"
                    >
                        50+
                    </div>
                    <div class="text-offset">Clientes Satisfechos</div>
                </div>
                <div
                    class="animate-slideUp text-center"
                    style="animation-delay: 300ms;"
                >
                    <div
                        class="mb-2 font-bold text-primary transition-transform duration-300 text-5xl hover:scale-110"
                    >
                        20+
                    </div>
                    <div class="text-offset">Desarrolladores Expertos</div>
                </div>
            </div>

            <!-- CTA -->
            <div
                class="mt-12 animate-fadeIn text-center"
                style="animation-delay: 400ms;"
            >
                <a
                    href="/contacto"
                    class="hover:bg-primary/90 group inline-flex items-center gap-3 rounded-lg bg-primary px-8 py-4 font-bold text-white transition-all duration-300 hover:scale-105 hover:shadow-xl"
                >
                    <Icon
                        name="mdi:email"
                        class="size-6 transition-transform duration-300 group-hover:rotate-12"
                    />
                    <span>Trabajemos Juntos</span>
                </a>
            </div>
        </ContentSection>
    </div>
</BaseLayout>
<script>
    // Function to update intro logo based on theme
    const updateIntroLogo = () => {
        const logo = document.querySelector(
            "#logo-contacto use",
        ) as SVGUseElement;
        if (!logo) return;

        const currentTheme = document.documentElement.dataset.theme;
        const isLightTheme = currentTheme === "light";

        if (isLightTheme) {
            logo.setAttribute("href", "/sprite.svg#logomarkLight");
        } else {
            logo.setAttribute("href", "/sprite.svg#logomark");
        }
    };

    // Listen for theme changes
    const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
            if (
                mutation.type === "attributes" &&
                mutation.attributeName === "data-theme"
            ) {
                updateIntroLogo();
            }
        });
    });

    observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["data-theme"],
    });

    // Initial logo update
    updateIntroLogo();
</script>
