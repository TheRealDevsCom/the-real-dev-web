---
import SpriteIcon from "~/components/sprite-icon.astro";
import ContentSection from "~/components/content-section.astro";
---

<ContentSection title="Somos The Real Devs" id="intro">
  <SpriteIcon slot="eyebrow" name="logomark" class="size-72" id="logo-intro" />
  <Fragment slot="lead">
    Una agencia de desarrollo especializada en sistemas
    <span class="text-primary">empresariales,</span>Pyme,
    <span class="text-primary">Salesforce</span>
    integraciones <span class="text-primary"
      >y plataformas web de alto rendimiento.</span
    >
  </Fragment>
  <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
    <a
      href="/contacto#cotizar"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4 transition-all hover:bg-primary hover:text-white"
    >
      <SpriteIcon name="mdi:telescope" class="size-8" />
      <span>Cotizar Proyecto</span>
    </a>
    <a
      href="/contacto#agendar"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4 transition-all hover:bg-primary hover:text-white"
    >
      <SpriteIcon name="mdi:rocket" class="size-8" />
      <span>Agenda una reuni√≥n</span>
    </a>
  </div>
</ContentSection>

<script>
  // Function to update intro logo based on theme
  const updateIntroLogo = () => {
    const logo = document.querySelector("#logo-intro use") as SVGUseElement;
    if (!logo) return;

    const currentTheme = document.documentElement.dataset.theme;
    const isLightTheme = currentTheme === "light";

    if (isLightTheme) {
      logo.setAttribute("href", "/sprite.svg#logomarkLight");
    } else {
      logo.setAttribute("href", "/sprite.svg#logomark");
    }
  };

  // Listen for theme changes
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (
        mutation.type === "attributes" &&
        mutation.attributeName === "data-theme"
      ) {
        updateIntroLogo();
      }
    });
  });

  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ["data-theme"],
  });

  // Initial logo update
  updateIntroLogo();
</script>
