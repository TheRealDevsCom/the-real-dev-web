---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

export interface Props {
  showLink?: boolean;
}

const { showLink = true } = Astro.props;

const features: Array<FeatureItem> = [
  {
    title: "Desarrollo de Software",
    description:
      "Aplicaciones empresariales personalizadas, web y desktop. Dominio total de .NET, Node.js, Angular, Vue y más.",
    icon: "mdi:monitor-dashboard",
  },
  {
    title: "Soluciones Salesforce",
    description:
      "Implementación y desarrollo avanzado en Salesforce (Apex, LWC, Flows). Automatización de procesos comerciales y contables.",
    icon: "mdi:cloud-check",
  },
  {
    title: "Apps Móviles",
    description:
      "Desarrollo multiplataforma nativo (Android/iOS) con Flutter. Experiencias de usuario fluidas y modernas.",
    icon: "mdi:cellphone",
  },
  {
    title: "Infraestructura & Cloud",
    description:
      "Administración de servidores Linux, redes, VPN y seguridad. Despliegue CI/CD y entornos de alta disponibilidad.",
    icon: "mdi:server-network",
  },
  {
    title: "Consultoría IT",
    description:
      "Asesoría estratégica para la transformación digital. Optimización de sistemas legacy y arquitectura de software.",
    icon: "mdi:lightbulb-on",
  },
  {
    title: "Productos SaaS",
    description:
      "Desarrollo de plataformas propias como ERPs financieros, CRMs adaptables y sistemas de automatización de flujos.",
    icon: "mdi:rocket-launch",
  },
];
---

<ContentSection title="Nuestros Servicios" id="services">
  <Fragment slot="lead">
    En <span class="text-primary">The Real Devs</span>, convertimos operaciones
    empresariales en <span class="text-primary">ecosistemas digitales</span>
    automatizados y medibles.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>

  {
    showLink && (
      <div class="mt-8 text-center">
        <a
          href="/servicios"
          class="inline-flex items-center gap-2 rounded-lg border-2 border-primary bg-transparent px-6 py-3 font-bold text-primary transition-all hover:bg-primary hover:text-white"
        >
          <span>Ver Todos los Servicios</span>
          <Icon name="mdi:arrow-right" class="size-5" />
        </a>
      </div>
    )
  }
</ContentSection>
